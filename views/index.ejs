<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>
<body>
    
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>

        <%
            if(blogs.length > 0){ 
                    blogs.forEach(blog => { %>

                    <h3 class="title"><%= blog.title %></h3> 
                    <p class="snippet"><%= blog.snippet %></p>

            <%    } )
            } else{  %>
                <h4>There Are No Blogs To Display</h4>
           <% } %>
        

    </div>

    <di class="form content">
            <table>
            <tr>
                <td>Name : </td>
                <td> <textarea aria-label="Enter Name:"></textarea> </td>
            </tr>
            <tr>
                <td>Surname : </td> 
                <td> <input aria-label="Enter Surname:"> </td>
            </tr>
            <tr>
                <td>Age : </td> 
                <td> <input aria-label="Enter Surname:"> </td>
            </tr>
        </table>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>